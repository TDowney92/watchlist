<% include ../partials/header.ejs %>

<main class="container">

	<h1>Edit a Movie - TV show from the list</h1>



	<h4> TV shows </h4>

    <form method="post">
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">Title: *</label>
            <input name="title" id="title" required value="<%= watch.title %>"/>
        </div>
        <div class="form-group">
            <label for="rating" class="col-sm-2 control-label">TV Parental Guide: *</label>
            <input name="rating" id="rating" required value="<%= watch.rating %>" />
						<select name="rating" id="rating">
							<option<% if (watch.rating == 'TV-Y') { %> selected }%>>TV-Y</option>
							<option <% if (watch.rating == 'TV-Y7') { %> selected }%>>TV-Y7</option>
							<option <% if (watch.rating == 'TV-Y7-FV') { %> selected }%>TV-Y7-FV</option>
							<option <% if (watch.rating == 'TV-G') { %> selected }%>TV-G</option>
							<option <% if (watch.rating == 'TV-14') { %> selected }%>TV-14</option>
							<option <% if (watch.rating == 'TV-M') { %> selected }%>TV-M</option>
						</select>
        </div>
        <div class="form-group">
            <label for="genre" class="col-sm-2 control-label">Genre:</label>
            <select name="genre" id="genre" >
							<option<% if (watch.genre == 'Drama') { %> selected }%>>Daram</option>
							<option <% if (watch.genre == 'Comedy') { %> selected }%>>Comedy</option>
							<option <% if (watch.genre == 'Sci-fi') { %> selected }%>Sci-fi</option>
							<option <% if (watch.genre == 'Western') { %> selected }%>Western</option>
							<option <% if (watch.genre == 'Animation') { %> selected }%>Animation</option>
							<option <% if (watch.genre == 'History') { %> selected }%>History</option>
            </select>
        </div>
        <div class="form-group">
            <label for="seasons" class="col-sm-2 control-label">Number of Seasons:</label>
            <input name="seasons" id="seasons" min="1" type="number" required value="<%= watch.seasons %>"/>
        </div>
        <button class="btn btn-success col-sm-offset-2">Save</button>
    </form>
</main>

<% include ../partials/footer.ejs %>
